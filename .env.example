# Proxy port that the Bitburner game connects to
PROXY_GAME_PORT=12526

# Proxy port that local clients (MCP, sync) connect to
PROXY_CLIENT_PORT=12528

# MCP server connects to proxy clients port
BITBURNER_RPC_URL=ws://localhost:12528

# Set to debug for verbose proxy logging
PROXY_LOG_LEVEL=info

# Logging (debug | info | warn | error)
MCP_LOG_LEVEL=info

# Max write size in bytes
FILE_WRITE_MAX_BYTES=1000000

# RPC timeouts and reconnects
RPC_TIMEOUT_MS=5000
RPC_RECONNECT_BASE_MS=250
RPC_RECONNECT_MAX_MS=10000
